{
    "$id": "https://identity.foundation/dwn/json-schemas/protocol-rule-set.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "allow": {
            "type": "object",
            "oneOf": [
                {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "anyone": {
                            "type": "object",
                            "properties": {
                                "to": {
                                    "type": "array",
                                    "minItems": 1,
                                    "items": {
                                        "type": "string",
                                        "enum": [
                                            "write"
                                        ]
                                    }
                                }
                            }
                        }
                    }
                },
                {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "recipient": {
                            "type": "object",
                            "properties": {
                                "of": {
                                    "type": "string"
                                },
                                "to": {
                                    "type": "array",
                                    "minItems": 1,
                                    "items": {
                                        "type": "string",
                                        "enum": [
                                            "write"
                                        ]
                                    }
                                }
                            }
                        }
                    }
                }
            ]
        },
        "records": {
            "type": "object",
            "patternProperties": {
                ".*": {
                    "$ref": "https://identity.foundation/dwn/json-schemas/protocol-rule-set.json"
                }
            }
        }
    }
}